{
  "manifest_version": 3,
  "name": "DarkTorch",
  "version": "1.3",
  "description": "Darkens webpages with adjustable spotlight",
  "author": "Zaheer Abbas Khan",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "DarkTorch"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
